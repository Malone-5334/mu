<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--无ActionBar主题-->
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--全透明Window明主题-->
    <style name="AppTheme.Translucent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--基础Toolbar主题-->
    <style name="AppTheme.Toolbar.Base" parent="Widget.AppCompat.Toolbar">
        <item name="colorPrimary">@color/colorWindowContentBalck</item>
        <item name="colorPrimaryDark">@color/colorWindowContent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>

    </style>

    <!--全屏状态主题-->
    <style name="AppTheme.Fullscreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--AppTheme.NavigationBar-->
    <style name="AppTheme.Toolbar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">@color/colorWindowContent</item>
        <item name="android:height">?attr/actionBarSize</item>
    </style>

    <style name="AppTheme.Toolbar.NoInset" parent="AppTheme.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetRight">0dp</item>
    </style>

    <style name="AppTheme.Toolbar.Light.NoInset" parent="AppTheme.Toolbar.NoInset">
        <item name="android:background">@color/grey10</item>
    </style>

    <!--AppTheme.Toolbar.IconA-->
    <style name="AppTheme.Toolbar.Icon.A" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--AppTheme.Toolbar.IconB-->
    <style name="AppTheme.Toolbar.Icon.B" parent="Base.Widget.AppCompat.ImageButton">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--AppTheme.Toolbar.MenuText.A-->
    <style name="AppTheme.Toolbar.MenuText.A" parent="TextAppearance.AppCompat">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--AppTheme.Toolbar.MenuText.B-->
    <style name="AppTheme.Toolbar.MenuText.B" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
    </style>

    <!--AppTheme.NavigationBar.Light-->
    <style name="AppTheme.Toolbar.Light" parent="AppTheme.Toolbar">
        <item name="android:background">@color/grey10</item>
    </style>

    <style name="WindowNoTranslucent">
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!--欢迎界面主题-->
    <style name="AppTheme.Welcome" parent="AppTheme.Fullscreen">
        <item name="android:windowBackground">@drawable/ic_bg</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--标题文字-->
    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorBlackText</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
